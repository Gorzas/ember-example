{{outlet}}

<div class="row">
  <div class="col-sm-8">
    {{#each model as |post|}}
      <div class="blog-post">
        <h2>{{post.title}}</h2>
        <p class="blog-post-meta">{{post.createdAt}}</p>
        <div class="blog-post-body">
          {{froala-content content=post.body}}
        </div>
      </div>
    {{/each}}
  </div>
</div>
